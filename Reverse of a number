//To write a Java Program to print the Reverse of a Number.

// Java Code

import java.util.*;
public class Basic {
 public static void main(String args []){
 Scanner input = new Scanner(System.in);
 int number;
 System.out.println("Enter the number :");
 number = input.nextInt();
 int reverse = 0;
 while(number != 0)
 {
 int remainder = number % 10;
 reverse = reverse * 10 + remainder;
 number = number / 10;
 }
 System.out.println("The reverse of the number : " + number + "is : "+ 
reverse);
 }
}
